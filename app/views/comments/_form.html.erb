<%= form_with(model: [ @study_item, @study_item.comments.build ], local: true) do |form| %>
<p>
  <%= form.label :commenter, 'Usuário' %>
  <%= form.text_field :commenter %>
</p>
<p>
  <%= form.label :body, 'Comentário' %>
  <%= form.text_area :body %>
</p>
<p>
  <%= form.submit 'Enviar' %>
</p>
<% end %>
